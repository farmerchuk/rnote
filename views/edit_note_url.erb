<div id="edit-note-url" class="note-form">

  <header class="main-header">

    <h1>Edit Link</h1>

    <a class="all-related-notes-icon" href="/folders/<%= @folder_uuid %>/all_related_notes"></a>

  </header>

  <section class="main-body">

    <ul class="notes">

      <% @notes.each do |note| %>

          <li>

            <% if note[:note_id].to_i == @note_id %>

              <article id="active-note">

                <header>

                  <div class="timestamp">

                    <small>Created on:</small>

                    <time datetime="2001-05-15T19:00"><%= format_date(note[:note_date_time]) %></time>

                  </div>

                  <h1><%= note[:note_title] %></h1>

                </header>

                <form action="/folders/<%= @folder_uuid %>/notes_url/<%= @note_uuid %>/edit" method="post">

                  <fieldset>

                    <dl>

                      <div class="form-row">
                        <dt>
                          <label for="title">Note title:</label>
                        </dt>
                        <dd>
                          <input type="text" name="title" id="title" value="<%= note[:note_title] %>">
                        </dd>
                      </div>

                      <div class="form-row">
                        <dt>
                          <label for="url">URL:</label>
                        </dt>
                        <dd>
                          <input type="text" name="url" id="url" value="<%= note[:note_url] %>">
                        </dd>
                      </div>

                      <div class="form-row">
                        <dt>
                          <label for="body">Details:</label>
                        </dt>
                        <dd>
                          <textarea name="body" id="body" rows="8" cols="80"><%= note[:note_body] %></textarea>
                        </dd>
                      </div>

                    </dl>

                  </fieldset>

                  <input class="btn form-submit" type="submit" name="action" value="Update Link">

                  <input class="btn btn-delete note-delete" type="submit" name="action" value="Delete Link">

                </form>

              </article>

            <% else %>

              <article>

                <% if !note[:note_url].empty? %>

                  <header>

                    <div class="timestamp">

                      <small>Created on:</small>

                      <time datetime="2001-05-15T19:00"><%= format_date(note[:note_date_time]) %></time>

                    </div>

                    <h1>
                      <a href="/folders/<%= note[:folder_uuid] %>/notes_url/<%= note[:note_uuid] %>/edit#active-note"><%= note[:note_title] %></a>
                    </h1>

                    <h3><%= note[:folder_name] %></h3>

                  </header>

                  <section class="display-note-url">

                    <a href="<%= note[:note_url] %>" rel="noopener noreferrer" target="_blank"><%= note[:note_url] %></a>

                    <img src="<%= note[:note_url_preview] %>" alt="Note image preview">

                    <p>
                      <pre class="display-note-body"><%= note[:note_body] %></pre>
                    </p>

                  </section>

                <% else %>

                  <header>

                    <div class="timestamp">

                      <small>Created on:</small>

                      <time datetime="2001-05-15T19:00"><%= format_date(note[:note_date_time]) %></time>

                    </div>

                    <h1>
                      <a href="/folders/<%= note[:folder_uuid] %>/notes/<%= note[:note_uuid] %>/edit#active-note"><%= note[:note_title] %></a>
                    </h1>

                    <h3><%= note[:folder_name] %></h3>

                  </header>

                  <section>

                    <p>
                      <pre class="display-note-body"><%= note[:note_body] %></pre>
                    </p>

                  </section>

                <% end %>

              </article>

            <% end %>

          </li>

      <% end %>

    </ul>

</div>
