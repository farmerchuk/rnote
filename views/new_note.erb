<div id="create-new-note">

  <header class="primary-header">

    <h3>Add New Note</h3>

    <a class="btn" href="#">VIEW ALL RELATED NOTES</a>

  </header>

  <header class="user-settings">
    <a href="#">Jason</a>
  </header>

  <main>

    <aside class="folder-menu">

      <a class="logo" href="/">
        <img src="/images/logo.png" alt="logo">
      </a>

      <header>

        <h1><%== @folder_name %></h1>

        <h2>#<%== @folder_type.upcase %></h2>

      </header>

      <section class="folder-attributes">

        <dl>
          <% @folder_attributes.each do |attribute| %>
            <% unless attribute[:name].empty? || attribute[:value].empty? %>
              <dt><%== attribute[:name] %>:</dt>
              <dd><%== attribute[:value] %></dd>
            <% end %>
          <% end %>
        </dl>

      </section>

      <section class="folder-actions">

        <ul>
          <li>
            <a href="/folders/<%== @folder_id %>/edit">&gt; EDIT FOLDER</a>
          </li>
          <li>
            <a href="#">&gt; ADD REMINDER</a>
          </li>
          <li>
            <a href="#">&gt; CREATE RELATED FOLDER</a>
          </li>
          <li>
            <a href="/folders/new">&gt; CREATE NEW FOLDER</a>
          </li>
          <li>
            <a href="#">&gt; DELETE FOLDER</a>
          </li>
        </ul>

      </section>

      <form class="find" action="#" method="post">
        <label>
          <input type="text" name="query" placeholder="Find folder...">
        </label>
        <input type="submit" value="">
      </form>

    </aside>

    <section class="primary-body">

      <form action="/folders/<%== @folder_id %>/notes/new" method="post">

        <fieldset>

          <dl>

            <div class="form-row">
              <dt>
                <label for="title">Note title:</label>
              </dt>
              <dd>
                <input type="text" name="title" id="title" placeholder="Follow-up">
              </dd>
            </div>

            <div class="form-row">
              <dt>
                <label for="body">Details:</label>
              </dt>
              <dd>
                <textarea name="body" id="body" rows="8" cols="80"></textarea>
              </dd>
            </div>

          </dl>

        </fieldset>

        <input class="btn form-submit" type="submit" value="Save New Note">

      </form>

      <% if @notes.empty? %>

        <!-- Show nothing if no existing notes -->

      <% else %>

        <% @notes.each do |note| %>

          <article>

            <header>
              <a href="#">
                <h3><%== note[:note_title] %></h3>
              </a>
              <time datetime="2001-05-15T19:00"><%== note[:note_date_time] %></time>
            </header>

            <section class="note">

              <p>
                <%== new_line_to_br(note[:note_body]) %>
              </p>

            </section>

          </article>

        <% end %>

      <% end %>

