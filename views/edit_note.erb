<div id="edit-note" class="note-form">

  <header class="main-header">

    <h1>Edit Note</h1>

    <a class="btn btn-right" href="/folders/<%= @folder_uuid %>/all_related_notes">VIEW ALL RELATED NOTES</a>

  </header>

  <section class="main-body">

    <ul class="notes">

      <% @notes.each do |note| %>

          <li>

            <% if note[:note_id].to_i == @note_id %>

              <article id="active-note">

                <header>

                  <h1><%= note[:note_title] %></h1>

                </header>

                <form action="/folders/<%= @folder_uuid %>/notes/<%= @note_uuid %>/edit" method="post">

                  <fieldset>

                    <dl>

                      <div class="form-row">
                        <dt>
                          <label for="title">Note title:</label>
                        </dt>
                        <dd>
                          <input type="text" name="title" id="title" value="<%= note[:note_title] %>">
                        </dd>
                      </div>

                      <div class="form-row">
                        <dt>
                          <label for="body">Details:</label>
                        </dt>
                        <dd>
                          <textarea name="body" id="body" rows="8" cols="80"><%= note[:note_body] %></textarea>
                        </dd>
                      </div>

                    </dl>

                  </fieldset>

                  <input class="btn form-submit" type="submit" name="action" value="Update Note">

                  <input class="btn btn-delete note-delete" type="submit" name="action" value="Delete Note">

                </form>

              </article>

            <% else %>

              <article>

                <header>

                  <time datetime="2001-05-15T19:00"><%= format_date(note[:note_date_time]) %></time>

                  <h1>
                    <a href="/folders/<%= @folder_uuid %>/notes/<%= note[:note_uuid] %>/edit#active-note"><%= note[:note_title] %></a>
                  </h1>

                </header>

                <section>

                  <p>
                    <pre class="display-note-body"><%= note[:note_body] %></pre>
                  </p>

                </section>

              </article>

            <% end %>

          </li>

      <% end %>

    </ul>

</div>
