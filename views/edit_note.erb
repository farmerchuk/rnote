<div id="edit-note">

  <header class="primary-header">

    <h3>Edit Note</h3>

    <a class="btn" href="/folders/<%= @folder_id %>/all_related_notes">VIEW ALL RELATED NOTES</a>

  </header>

  <main>

    <section class="primary-body">

      <% @notes.each do |note| %>

        <% if note[:note_id].to_i == @note_id %>

          <article id="active-note">

            <header>
              <h3><%= note[:note_title] %></h3>
            </header>

            <form action="/folders/<%= @folder_id %>/notes/<%= @note_id %>/edit" method="post">

              <fieldset>

                <dl>

                  <div class="form-row">
                    <dt>
                      <label for="title">Note title:</label>
                    </dt>
                    <dd>
                      <input type="text" name="title" id="title" value="<%= note[:note_title] %>">
                    </dd>
                  </div>

                  <div class="form-row">
                    <dt>
                      <label for="body">Details:</label>
                    </dt>
                    <dd>
                      <textarea name="body" id="body" rows="8" cols="80"><%= note[:note_body] %></textarea>
                    </dd>
                  </div>

                </dl>

              </fieldset>

              <input class="btn form-submit" type="submit" value="Update Note">

            </form>

          </article>

        <% else %>

          <article>

            <header>
              <time datetime="2001-05-15T19:00"><%= format_date(note[:note_date_time]) %></time>
              <h3>
                <a href="/folders/<%= @folder_id %>/notes/<%= note[:note_id] %>/edit#active-note"><%= note[:note_title] %></a>
              </h3>
            </header>

            <section class="note">

              <p>
                <%= new_line_to_br(note[:note_body]) %>
              </p>

            </section>

          </article>

        <% end %>

      <% end %>

  </main>

</div>
